<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:top="-6dp"
        android:left="-6dp"
        android:right="-6dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDown" />
            <stroke
                android:width="1dp"
                android:color="@color/colorUpClear" />
        </shape>
    </item>
    <item
        android:state_pressed="true"
        android:top="-6dp"
        android:left="-6dp"
        android:right="-6dp"
        android:bottom="0dp">>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDownFalse" />
            <stroke
                android:width="1dp"
                android:color="@color/colorUpClear" />
        </shape>
    </item>
</selector>